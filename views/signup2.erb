<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Vault - Registro (Paso 2)</title>
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to bottom, #2c587f, #c8e0f7);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .signup-container {
      width: 100%;
      max-width: 500px;
      padding: 20px;
      box-sizing: border-box;
      text-align: center;
    }

    h1 {
      margin: 10px 0 30px;
      font-size: 24px;
      color: white;
    }

    h2 {
      margin: 10px 0 30px;
      font-size: 20px;
      color: #001d4a;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    input[type="email"],
    input[type="password"],
    input[type="text"] {
      width: 100%;
      padding: 15px;
      margin-bottom: 25px;
      border: none;
      border-radius: 20px;
      background-color: #d4e4f7;
      color: #333;
      font-size: 16px;
      box-sizing: border-box;
    }


    .show-password-container {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        font-size: 14px;
        color: #333;
        margin-bottom: 20px; /* da espacio entre el checkbox y el botón */
        padding-left: 10px;  /* un poco de padding para que quede alineado */
      }

      .show-password-container input[type="checkbox"] {
        margin-right: 8px;
        transform: scale(1.2); /* un poco más visible */
      }


    button {
      width: 100%;
      padding: 15px;
      border: none;
      border-radius: 20px;
      background-color: #001d4a;
      color: white;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #002c6c;
    }

    .login {
      margin-top: 20px;
      font-size: 14px;
      color: #333;
    }

    .login a {
      display: inline-block;
      margin-top: 10px;
      background-color: #002c6c;
      padding: 12px 24px;
      border-radius: 20px;
      color: white;
      text-decoration: none;
    }

    .login a:hover {
      background-color: #001d4a;
    }
  </style>
</head>
<body>
  <div class="signup-container">
    <img src="/logoVault.png" alt="Logo de Vault" width="50">
    <h1>vault</h1>
    <h2>DATOS DE USUARIO</h2>
    <form action="/" method="post">
      <input type="email" name="email" placeholder="Email" required>
      <input type="password" id = "password" name="password" placeholder="Contraseña" required>
      <input type="password" id = "confirm_password" name="confirm_password" placeholder="Confirmar contraseña" required>
      
      <label class="show-password-container">
      <input type="checkbox" onclick="mostrarContrasenas()"> Mostrar contraseña
      </label>

      <button type="submit">REGISTRARME</button>
    </form>
  </div>
  <script>
    const form = document.querySelector('form');
    form.addEventListener('submit', function (e) {
      const password = form.password.value;
      const confirm = form.confirm_password.value;

      if (password !== confirm) {
        e.preventDefault(); // evita que se envíe
        alert('Las contraseñas no coinciden');
      }
    });

    function mostrarContrasenas() {
      const pass = document.getElementById("password");
      const confirm = document.getElementById("confirm_password");

      const mostrar = pass.type === "password";
      pass.type = mostrar ? "text" : "password";
      confirm.type = mostrar ? "text" : "password";
    }

  </script>
</body>
</html>
