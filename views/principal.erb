<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Página Principal</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to bottom, #2c587f, #c8e0f7);
      display: flex;
      justify-content: center;
      height: 100vh;
    }

    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
      width: 100%;
      max-width: 1200px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      background-color: #c8e0f7;
      padding: 10px 20px;
      border-radius: 12px;
      color: black;
      margin-top: 20px;
    }

    .header .user-info span {
      color: black;
      font-weight: bold;
      margin-left: 10px;
    }

    .header .menu-icon {
      font-size: 20px;
      cursor: pointer;
    }

    .main-content {
      display: flex;
      gap: 20px;
      width: 100%;
      margin-top: 20px;
    }

    .balance-card {
      background: #c8e0f7;
      color: black;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      flex: 1;
      height: 200px; /* Altura aumentada */
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .activity-card {
      background: #c8e0f7;
      color: black;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      flex: 1;
      height: 500px; /* Altura aumentada */
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .actions-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 15px;
      margin-top: 20px;
    }

    .action-button {
      background: #ffffff;
      color: #000;
      text-align: center;
      padding: 10px;
      border-radius: 8px;
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
      cursor: pointer;
      font-weight: bold;
      font-size: 14px;
    }

    .footer {
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      width: 100%;
      background-color: #002c6c;
      padding: 10px 0;
      margin-top: 20px;
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      color: white;
      box-shadow: 0px -2px 4px rgba(0, 0, 0, 0.1);
      z-index: 1000;
    }

    .footer-icon img {
      width: 20px;
      height: 20px;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <div class="user-info">
        <img src="/logoVaultAzul.png" alt="Logo" width="20" height="20">
        <span>¡Hola, <%= @usuario.person.name %>!</span>
      </div>
      <div class="menu-icon">☰</div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Balance Section -->
      <div class="balance-card">
        <div>
          <h2>$<%= formatted_money(@cuenta&.balance || 0) %></h2>
          <button>Mi CVU</button>
        </div>
        <div class="actions-grid">
          <a href="/ingresar" class="action-button">Ingresar</a>
          <div class="action-button">Transferir</div>
          <a href="/retirar" class="action-button">Retirar</a>
          <div class="action-button">Ahorros</div>
        </div>
      </div>

      <!-- Activity Section -->
      <div class="activity-card">
        <div>
          <h3>Actividad</h3>
          <p>No hay actividad reciente.</p>
        </div>
        <button>Ver más</button>
      </div>
    </div>

    <!-- Footer -->
    <div class="footer">
      <div class="footer-icon">
        <img src="/icon1.png" alt="Ícono 1">
      </div>
      <div class="footer-icon">
        <img src="/icon2.png" alt="Ícono 2">
      </div>
      <div class="footer-icon">
        <img src="/icon3.png" alt="Ícono 3">
      </div>
    </div>
  </div>
</body>
</html>
