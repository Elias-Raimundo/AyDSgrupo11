<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Página Principal</title>
    <link rel="stylesheet" href="/styles.css" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to bottom, #2c587f, #c8e0f7);
            display: flex;
            justify-content: center;
            height: 100vh;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            width: 100%;
            max-width: 1200px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            background-color: #c8e0f7;
            padding: 10px 20px;
            border-radius: 12px;
            color: black;
            margin-top: 20px;
        }

        .header .user-info span {
            color: black;
            font-weight: bold;
            margin-left: 10px;
        }

        .header .menu-icon {
            font-size: 20px;
            cursor: pointer;
        }

        .main-content {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            width: 100%;
            margin-top: 20px;
        }

        .left-column-cards {
            display: flex;
            flex-direction: column; /* Apila las tarjetas verticalmente */
            gap: 20px; /* Espacio entre Balance y Reservas */
            flex: 1.3; 
            min-width: 350px; /* Ancho mínimo para que no se vea muy comprimido */
            max-width: 65%; /* Limita el ancho máximo para evitar que se estire demasiado en pantallas muy grandes */
        }

        .balance-card {
            background: #c8e0f7;
            color: black;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            flex: 1;
            height: auto; /* Altura auto para que se ajuste al contenido */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        
        .boton-pildora {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px 69px;
            border-radius: 25px;
            font-weight: bold;
            text-decoration: none;
            font-size: 14px;
            border: 2px solid #003087;
            background-color: #e6f0ff;
            color: #003087;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .boton-pildora:hover {
            background-color: #003087;
            color: white;
        }

        .boton-pildora.activo {
            background-color: #003087;
            color: white;
        }

        .activity-card {
            background: #c8e0f7;
            color: black;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            flex: 1;
            height: 500px; /* Altura fija para la actividad */
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Asegura que el contenido se distribuya */
            position: relative; /* Para usar position absoluta en el botón */
        }

        .actions-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
            margin-top: 20px;
        }

        /* Removido .action-button de aquí si se usa solo para el botón de actividad */

        /* Estilos de la tarjeta de Reservas */
        .reservas-card {
            background: #c8e0f7;
            color: black;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            height: 220px;
            flex-direction: column; /* Apila el h3, la lista y el botón "Ver más" */
            /* La altura se ajustará automáticamente al contenido */
        }

        .reservas-card h3 {
            font-size: 1.2rem;
            margin-bottom: 15px;
            border-radius: 10px;
            padding-bottom: 8px;
            border-bottom: 2px solid #004080;
        }

        .reservas-list {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap; /* Permite que los ítems salten a la siguiente línea */
            gap: 15px; /* Espacio entre los ítems */
            justify-content: flex-start;
            /* NO overflow-x: auto; aquí */
            padding-bottom: 0;
        }

        .reservas-list li {
            padding: 10px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            /* Ajusta estos valores para controlar cuántos ítems caben por fila */
            flex: 1 1 calc(33.33% - 15px); /* Ejemplo: 3 ítems por fila con 15px de gap */
            min-width: 150px; /* Ancho mínimo para cada ítem de reserva */
            max-width: 200px; /* Ancho máximo para evitar que crezcan demasiado */
            box-sizing: border-box; /* Asegura que padding y border se incluyan en el ancho */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transform: translateY(-3px); 
        }

        .reservas-list li strong {
            display: block;
            font-size: 0.9rem;
            color: #004080;
            margin-bottom: 5px;
        }

        .reservas-list li span {
            font-size: 0.9rem;
            color: #2c587f;
        }

        .mi-cvu-btn {
            background: transparent;
            color: #004080;
            border: 2px solid #004080;
            padding: 10px;
            font-weight: bold;
            cursor: pointer;
            border-radius: 10px;
            width: 100px;
            font-size: 0.9rem;
            transition: background-color 0.3s ease, color 0.3s ease;
            display: block;
            text-decoration: none;
            margin-left: 5px;
            margin-top: 10px;
        }

        .mi-cvu-btn:hover {
            background-color: #004080;
            color: white;
        }


        /* Ocultar actividades extras (para la sección de actividad) */
        .hidden-activity {
            display: none;
        }

        /* Botón ver más fijo abajo (para la sección de actividad) */
        #toggle-activities-btn {
            background: transparent;
            color: #004080; 
            border: 2px solid #004080;
            padding: 10px;
            font-weight: bold;
            cursor: pointer;
            border-radius: 10px;
            position: absolute;
            bottom: 15px;
            left: 15px;
            right: 15px;
            text-align: center;
            text-decoration: none;
            font-size: 0.9rem;
        }

        #toggle-activities-btn:hover {
            background: transparent;
        }

        /* Estilo para el botón "Ver todas las reservas" */
        .btn-ver-todas-reservas {
            display: block; /* Ocupa su propia línea */
            width: 300px;
            margin-top: 15px; /* Espacio arriba del botón */
            padding: 10px;
            background-color: #004080;
            color: white;
            text-align: center;
            border-radius: 10px; /* Estilo de píldora */
            text-decoration: none; /* Quitar subrayado del enlace */
            font-weight: bold;
            font-size: 0.9rem;
            transition: background-color 0.3s ease;
            /* Centrar el botón dentro de .reservas-card si es flex-direction: column */
            margin-left: auto;
            margin-right: auto;
        }

        .btn-ver-todas-reservas:hover {
            background-color: #002c6c;
        }

        /* Media Queries para responsividad */
        @media (max-width: 992px) {
            .main-content {
                flex-direction: column;
                align-items: center;
            }
            .left-column-cards,
            .activity-card {
                flex: none;
                width: 95%;
                max-width: 600px;
            }
            .reservas-list li {
                flex: 1 1 calc(50% - 10px); /* 2 ítems por fila en tablets */
                max-width: none; /* Permitir que se ajusten mejor */
            }
            .actions-grid {
                grid-template-columns: repeat(3, 1fr); /* 3 columnas en tablets */
            }
            .actions-grid a:last-child { /* Ajuste para el último botón (imagen) si no encaja bien */
                grid-column: span 1;
            }
        }

        @media (max-width: 576px) {
            .reservas-list li {
                flex: 1 1 100%; /* 1 ítem por fila en móviles */
                max-width: none; /* Asegura que ocupe el 100% */
            }
            .actions-grid {
                grid-template-columns: repeat(2, 1fr); /* 2 columnas en móviles pequeños */
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="user-info">
                <img src="/logoVaultAzul.png" alt="Logo" width="20" height="20" />
                <span>¡Hola, <%= @usuario.person.name %>!</span>
            </div>
            <div class="menu-icon">☰</div>
            <!-- Menú desplegable -->
            <div id="dropdown-menu" style="display: none; position: absolute; top: 70px; right: 30px; background: white; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.2); z-index: 1000;">
            <ul style="list-style: none; margin: 0; padding: 10px;">
                <li style="padding: 8px 12px; cursor: pointer;" onclick="mostrarModalLogout()">Cerrar sesión</li>
            </ul>
            </div>

        </div>

        <div class="main-content">
            <div class="left-column-cards">
                <div class="balance-card">
                    <div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <h2 id="saldo" style="font-size: 1.7rem; margin-left: 20px;">
                                $<%= formatted_money(@cuenta&.balance || 0) %>
                            </h2>
                            <button onclick="toggleSaldo()" style="background: none; border: none; cursor: pointer;">
                                <i id="icono-ojo" class="fa-solid fa-eye" style="font-size: 15px;"></i>
                            </button>
                            <a href="/reserva" style="display: block; margin-left: auto; width: fit-content; margin-right: 25px; margin-top: 5px;">
                                <img src="/chanchitto.png" alt="reserva" style="width: 75px; height: 60px; cursor: pointer;" />
                            </a>
                        </div>
                        <button onclick="mostrarCVU()" class="mi-cvu-btn">Mi CVU</button>
                        <div
                            id="cvu-info"
                            style="display: none; margin-top: 10px; background: white; padding: 10px; border-radius: 8px; color: black; box-shadow: 0 2px 6px rgba(0,0,0,0.2);"
                        >
                            <p><strong>CVU:</strong> <%= @cuenta&.cvu || 'No disponible' %></p>
                            <div id="alias-display">
                                <strong>Alias:</strong> <span id="alias-text"><%= @cuenta&.account_alias %></span>
                                <button type="button" onclick="mostrarFormularioAlias()" style="margin-left: 10px;">Cambiar Alias</button>
                            </div>

                            <form id="alias-form" action="/actualizar_alias" method="POST" style="display: none; margin-top: 10px;">
                                <strong>Alias:</strong>
                                <input type="text" name="nuevo_alias" value="<%= @cuenta&.account_alias %>" required
                                    style="padding: 5px; border-radius: 5px; border: 1px solid #ccc;">
                                <button type="submit" style="margin-left: 10px;">Guardar</button>
                                <button type="button" onclick="cancelarEdicionAlias()" style="margin-left: 5px;">Cancelar</button>
                            </form>
                        </div>
                    </div>
                    <div class="actions-grid">
                        <a href="/ingresar" class="boton-pildora">Ingresar</a>
                        <a href="/transferir" class="boton-pildora">Transferir</a>
                        <a href="/retirar" class="boton-pildora">Retirar</a>
                    </div>
                </div>
                <div class="reservas-card">
                    <h3 style="color: #004080; text-align: center; position: relative; top: -13px;"> Últimas Reservas </h3>
                    <% if @reservas.any? %>
                        <ul class="reservas-list">
                            <% @reservas.first(3).each do |reserva| %>
                            <li>
                                <strong>Motivo:</strong> <%= reserva.name %>
                                <span>Monto: $<%= sprintf('%.2f', reserva.amount) %></span>
                            </li>
                            <% end %>
                        </ul>

                        <div style="display: flex; justify-content: center; gap: 10px; margin-top: 15px;">
                            <a href="/ahorros" class="btn-ver-todas-reservas">Crear nueva reserva</a>
                            <% if @reservas.size > 3 %>
                            <a href="/todas_las_reservas" class="btn-ver-todas-reservas">Ver todas las reservas</a>
                            <% end %>
                        </div>
                        <% else %>
                        <p style="display: flex; justify-content: center;">No hay reservas disponibles.</p>
                        <a href="/ahorros" class="btn-ver-todas-reservas" style="display: flex; justify-content: center; gap: 10px; margin-top: 57px;">Crear mi primer reserva</a>
                    <% end %>

                </div>
            </div> <div class="activity-card" style="margin-top: 0; padding: 10px 15px 15px 15px;">
                <h3 style="
                    color: #004080; 
                    margin-top: 0; 
                    margin-left: 200px; 
                    position: relative; 
                    top: 10px; 
                    text-decoration: underline;
                    ">
                    Actividad
                </h3>
                <% if @activities.any? %>
                    <ul style="list-style-type: none; padding: 0; margin: 0; padding-bottom: 80px;">
                    <% @activities.each_with_index do |activity, index| %>
                        <% visible = index < 4 %>
                        <% es_ultima = index == [@activities.size, 4].min - 1 %>
                        <% borde = es_ultima ? '' : 'border-bottom: 2px solid rgba(0, 64, 128, 0.4);' %>
                        <li
                        class="<%= 'hidden-activity' unless visible %>"
                        style="margin-bottom: 10px; padding: 10px; <%= borde %>"
                        >
                        <span><strong><%= activity[:type] %>:</strong></span>
                        <%
                            color = if activity[:type]  == 'Ingreso a reserva' || activity[:type] == 'Retiro de reserva'
                                    '#001d4a'
                                    elsif activity[:amount] < 0
                                    'red'
                                    else
                                    'green'
                                    end

                            signo = case activity[:type]
                                    when 'Ingreso', 'Transferencia Recibida', 'Ingreso a reserva' then '+'
                                    when 'Retiro', 'Retiro de reserva', 'Transferencia Enviada' then '-'
                                    else ''
                                    end
                        %>
                        <span style="color: <%= color %>;">
                            <%= "#{signo}$#{sprintf('%.2f', activity[:amount].abs)}" %>
                        </span>
                        <p style="margin: 5px 0;"><%= activity[:details] %></p>
                        <small style="color: #666;"><%= activity[:date].strftime("%d/%m/%Y %H:%M") %></small>
                        </li>
                    <% end %>
                    </ul>
                    <a href="/actividades" id="toggle-activities-btn">Ver más</a>
                <% else %>
                    <p>No hay actividad reciente.</p>
                <% end %>
            </div> </div>

    <script>
        function mostrarCVU() {
            const cvuInfo = document.getElementById("cvu-info");
            if (cvuInfo.style.display === "none") {
                cvuInfo.style.display = "block";
            } else {
                cvuInfo.style.display = "none";
            }
        }

        function toggleSaldo() {
            const saldo = document.getElementById("saldo");
            const icono = document.getElementById("icono-ojo");
            const valorReal = saldo.getAttribute("data-real");

            if (!valorReal) {
                saldo.setAttribute("data-real", saldo.textContent);
                saldo.textContent = "$***";
                icono.classList.remove("fa-eye");
                icono.classList.add("fa-eye-slash");
            } else {
                saldo.textContent = valorReal;
                saldo.removeAttribute("data-real");
                icono.classList.remove("fa-eye-slash");
                icono.classList.add("fa-eye");
            }
        }

        document.querySelector('.menu-icon').addEventListener('click', function () {
        const menu = document.getElementById('dropdown-menu');
        menu.style.display = (menu.style.display === 'block') ? 'none' : 'block';
        });

        function mostrarModalLogout() {
        document.getElementById('modal-logout').style.display = 'flex';
        document.getElementById('dropdown-menu').style.display = 'none';
        }

        function ocultarModalLogout() {
        document.getElementById('modal-logout').style.display = 'none';
        }

        function confirmarLogout() {
        window.location.href = "/logout";
        }

         function mostrarFormularioAlias() {
            document.getElementById('alias-display').style.display = 'none';
            document.getElementById('alias-form').style.display = 'block';
        }

        function cancelarEdicionAlias() {
            document.getElementById('alias-form').style.display = 'none';
            document.getElementById('alias-display').style.display = 'block';
        }

    </script>
    <!-- Modal de confirmación -->
    <div id="modal-logout" style="display: none; position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; background: rgba(0,0,0,0.5); z-index: 2000; justify-content: center; align-items: center;">
    <div style="background: white; padding: 20px; border-radius: 10px; text-align: center; width: 300px;">
    <p>¿Estás seguro que quieres cerrar sesión?</p>
    <button onclick="confirmarLogout()" style="background-color: #004080; color: white; border: none; padding: 10px 20px; border-radius: 5px;">Sí</button>
    <button onclick="ocultarModalLogout()" style="background-color: #004080; color: white; border: none; padding: 10px 20px; border-radius: 5px;">No</button>
  </div>
</div>
</body>
</html>